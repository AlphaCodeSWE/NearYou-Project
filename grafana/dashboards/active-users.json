{
  "id": null,
  "title": "Admin Overview â€“ Active Users & Shops",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "interval",
        "type": "interval",
        "label": "Time Range",
        "query": "5m,1h,6h,12h,24h,7d",
        "current": { "text": "1h", "value": "1h" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "geomap",
      "title": "Active Users Map",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "uid": "ClickHouse" },
      "targets": [
        {
          "refId": "A",
          "format": "table",
          "rawSql": "SELECT toFloat64(longitude) AS __lon__, toFloat64(latitude) AS __lat__, user_id, full_name, country, city FROM nearyou.user_events WHERE event_time >= now() - toInterval${interval}()"
        }
      ],
      "options": {
        "mapCenter": { "lat": 0, "lon": 0, "zoom": 1 },
        "tooltipFields": ["user_id","full_name","country","city"],
        "lonField": "__lon__",
        "latField": "__lat__"
      }
    },
    {
      "id": 2,
      "type": "geomap",
      "title": "Shops Map",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "uid": "Postgres" },
      "targets": [
        {
          "refId": "B",
          "format": "table",
          "rawSql": "SELECT ST_X(geom) AS __lon__, ST_Y(geom) AS __lat__, shop_id, shop_name, category FROM shops"
        }
      ],
      "options": {
        "mapCenter": { "lat": 0, "lon": 0, "zoom": 1 },
        "tooltipFields": ["shop_id","shop_name","category"],
        "lonField": "__lon__",
        "latField": "__lat__"
      }
    },
    {
      "id": 3,
      "type": "table",
      "title": "User Counts by Country",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
      "datasource": { "uid": "ClickHouse" },
      "targets": [
        {
          "refId": "C",
          "format": "table",
          "rawSql": "SELECT country, count(DISTINCT user_id) AS active_users FROM nearyou.user_events WHERE event_time >= now() - toInterval${interval}() GROUP BY country ORDER BY active_users DESC"
        }
      ]
    },
    {
      "id": 4,
      "type": "bar-chart",
      "title": "Shops by Category",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 6 },
      "datasource": { "uid": "Postgres" },
      "targets": [
        {
          "refId": "D",
          "format": "table",
          "rawSql": "SELECT category, count(*) AS shop_count FROM shops GROUP BY category ORDER BY shop_count DESC"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    }
  ]
}
