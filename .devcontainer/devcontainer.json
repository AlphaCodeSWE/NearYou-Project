// .devcontainer/devcontainer.json
{
  "name": "NearYou Dev Container", 
  "dockerComposeFile": "docker-compose.yml", //file per avviare i container
  "service": "app", //host di Vs Code
  "workspaceFolder": "/workspace", //cartelle di lavoro all'interno del container

  //uso porte per tecnologie
  // 8081 per Nifi (documentazione usa 8080, 8081)
  //1883 HiveMQ MQTT , per la connessione usa questa porta, interfaccia web su 8080
  //9093 Kafla, usa listener di default sulla 9092 in conf PLAINTEXT, 9093 con SSL
  //8080 per UI HiveMQ
  
  "forwardPorts":[8081,1883,9093,8080],
  
  // possibilit√† di usare docker e docker-compose, dentro il container "app"
  "features": {
    "docker-in-docker":"latest"      
  },
  //installo le dipendeze python da file 
  "postCreateCommand": "pip install -r requirements.txt || true",
  "remoteUser": "vscode" //utente di default per i comandi nel container
}
