{
  "name": "NearYou Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  // Uso porte per tecnologie
  // - 8081 per NiFi (documentazione usa 8080, 8081)
  // - 1883 HiveMQ MQTT, per la connessione usa questa porta, interfaccia web su 8080
  // - 9093 Kafka, usa listener di default sulla 9092 in configurazione PLAINTEXT, 9093 con SSL
  // - 8080 per UI HiveMQ
  "forwardPorts": [8081, 1883, 9093,9092, 8080],
  
  // Possibilit√† di usare Docker e Docker-compose, dentro il container "app"
  "features": {
    "docker-in-docker": "latest"      
  },
  
  // Installo le dipendenze Python da file 
  "postCreateCommand": "pip install -r requirements.txt || true",
  
  // Utente di default per i comandi nel container
  "remoteUser": "vscode"
}
